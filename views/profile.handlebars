
<div class="container">
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
            aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <a class="navbar-brand" href="#">Treble Finder</a>
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/talent">Find Talent</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/editprofile/{{user.id}}">Edit Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/review">Leave A Review</a>
                </li>
            </ul>
            <ul class="nav">
                <li class="mr-3"><a href="#"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
                <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
            </ul>
        </div>
    </nav>



    <div id="user-id" data-id="{{user.id}}"></div>
    <div class="row">
        <div class="mb-3 col-sm-12 col-md-12 col-lg-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Bio</h4>
                    {{user.bio}}
                </div>
            </div>
        </div>

    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Contact Information</h4>
                    <span>{{user.firstName}}'s Email: {{user.email}}</span> <br><span>{{user.firstName}}'s
                        Phone:{{user.phone}}</span>
                </div>
            </div>
        </div>
        <div class="mb-3 col-sm-12 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Talents</h4>

                    <ul>
                        {{#each user.Skills}}
                        <li>{{name}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Genres</h4>

                    <ul>
                        {{#each user.Genres}}
                        <li>{{name}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Areas</h4>

                    <ul>
                        {{#each user.Areas}}
                        <li>{{name}}</li>
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 d-flex justify-content-end">

            <button type="button" class="btn-outline-primary"><a href="mailto:{{user.email}}?Subject=Hello%20again"
                    target="_top">Send
                    Email</a></button>
        </div>
    </div>
</div>

