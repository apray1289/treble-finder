<div id="page-container">
    <div id="content-wrap">

        <nav class="navbar navbar-expand-lg navbar-light">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
                aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse navArea" id="navbarTogglerDemo01">

                <a class="navbar-brand" href="#">Treble Finder</a>
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/talent">Find Talent</a>
                    </li>
                    {{!-- <li class="nav-item">
                        <a class="nav-link" href="/edit-profile">Edit Profile</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/review">Leave A Review</a>
                    </li> --}}
                </ul>

                <ul class="nav justify-content-end mr-4">
                    <li class="loginText rightNav"><a href="/register"><span class="loginText">Sign Up</span></a></li>
                    <li class="loginText rightNav"><a href="/login"><span class="loginText">Login</span></a></li>
                </ul>
            </div>


        </nav>
        <div class="jumbotron">
            <h1 class="d-flex justify-content-center">Find Talent In Your Area</h1>
            <hr>
            <p class="d-flex justify-content-center">Use the drop-down boxes below to filter your search results.</p>

        </div>
        <div class="container">

            <div class="d-flex justify-content-center mt-4 allSearchButtons">

                <form action="/finduser">
                    <div class="btn-group">
                        <select class="selectpicker" name="areas[]" id='slect-area' multiple data-live-search="true"
                            title="Search By Location">
                            {{#each areas}}
                            <option>{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="btn-group">
                        <select class="selectpicker" name="skills[]" id='slect-skill' multiple data-live-search="true"
                            title="Search By Talent">
                            {{#each skills}}
                            <option>{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="btn-group">
                        <select class="selectpicker " name="genres[]" id='select-genre' multiple data-live-search="true"
                            title="Search By Genre">
                            {{#each genres}}
                            <option>{{name}}</option>
                            {{/each}}
                        </select>

                    </div>                    
                    <div class="btn-group">
                        <button data-toggle="modal" type="submit" id="searchTalentSubmit" class="btn btn-primary">Find Talent</button>
                    </div>
                </form>

            </div>

            {{#if foundTalent}}
            <div class="row">
                <div class="card-deck col">

                    {{#each users}}

                    <div class="card col">

                        <div class="card-body">
                            <h5 class="card-title text-center">{{this.firstName}} {{this.lastName}}</h5>
                            <p class="card-text text-center">
                                <ul>
                                    {{#each skills}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>

                            </p>
                            <a href="/profile/{{this.id}}" class="btn btn-primary d-flex justify-content-center">View
                                Profile</a>
                        </div>
                    </div>
                    {{/each}}
                </div>


            </div>
            {{/if}}
            {{#if error}}
            <div class="row">
                <div class="col">
                    <h6>Nothing found! Try a different search criteria.</h6>
                </div>
            </div>
            {{/if}}
        </div>


    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="reg-modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Talent Search</h4>
            </div>
            <div class="modal-body">
                <p id='error-text'>Looking...</p>
            </div>            
        </div>
    </div>
</div>