<div id="page-container">
    <div id="content-wrap">

        <nav class="navbar navbar-expand-lg navbar-light">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
                aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse navArea" id="navbarTogglerDemo01">

                <a class="navbar-brand" href="#">Treble Finder</a>
                <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/talent">Find Talent</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/edit-profile">Edit Profile</a>
                    </li>
                    
                    
                </ul>

                <ul class="nav justify-content-end mr-4">
                    <li class="loginText rightNav"><a href="/register"><span class="loginText">Sign Up</span></a></li>
                    <li class="loginText rightNav"><a href="/login"><span class="loginText">Login</span></a></li>
                </ul>
            </div>


        </nav>
        <div class="jumbotron">
            <h1 class="d-flex justify-content-center">Find Talent In Your Area</h1>
            <hr>
            <p class="d-flex justify-content-center">Use the drop-down boxes below to filter your search results.</p>

        </div>
        <div class="container">

            <div class="mt-4 allSearchButtons">

                <div class="row">
                    <div class="col-lg-3 col-xs-12">
                        <div class="form-group">
                            <select class="selectpicker form-control talentPicker" data-width="100%" id='slect-area'
                                multiple data-live-search="true" multiple data-actions-box="true" title="Search By Location">
                                {{#each areas}}
                                <option>{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 col-xs-12">
                        <div class="form-group">
                            <select class="selectpicker form-control talentPicker" data-width="100%" id='slect-skill'
                                multiple data-live-search="true" multiple data-actions-box="true" title="Search By Talent">
                                {{#each talents}}
                                <option>{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 col-xs-12">
                        <div class="form-group">
                            <select class="selectpicker form-control talentPicker" data-width="100%" id='slect-genre'
                                multiple data-live-search="true" multiple data-actions-box="true" title="Search By Genre">
                                {{#each genres}}
                                <option>{{name}}</option>
                                {{/each}}
                            </select>
                        </div>
                    </div>
                    <div class="col-lg-3 col-xs-12">
                        <button type="button" id="searchTalentSubmit" class="btn btn-primary">Find
                            Talent</button>
                    </div>

                </div>
            </div>





            <div class="row">
                <div class="col-md-6 col-xs-12">
                    {{#each users}}

                    <div class="card">

                        <div class="card-body talentCard">
                            <h5 class="card-title text-center">{{this.firstName}} {{this.lastName}}</h5>
                            <p class="card-text text-center">{{this.email}}</p>
                            <p class="card-text text-center">
                                <ul>
                                    {{#each skills}}
                                    <li>{{name}}</li>
                                    {{/each}}
                                </ul>

                            </p>
                            <a href="profile/{{this.id}}"
                                class="btn btn-primary viewBtn d-flex justify-content-center">View Profile</a>
                        </div>
                    </div>
                    {{/each}}
                </div>


            </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="reg-modal" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Modal Header</h4>
                    </div>
                    <div class="modal-body">
                        <p id='error-text'>Some text in the modal.</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <footer class="footer">
        <div class="container">
            <p class="d-flex justify-content-center mt-3">Copyright Â©2019 All Right Reserved Treble Finder</p>

        </div>

    </footer>
</div>