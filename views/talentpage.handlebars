<div class="container">

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
            aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
            <a class="navbar-brand" href="#">Treble Finder</a>
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/talent">Find Talent</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/editprofile">Edit Profile</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/review">Leave A Review</a>
                </li>
            </ul>
            <ul class="nav justify-content-end">
                <li><a href="/register"><span class="glyphicon glyphicon-user rightNav"></span> Sign Up</a></li>
                <li><a href="/login"><span class="glyphicon glyphicon-log-in rightNav"></span> Login</a></li>
            </ul>
        </div>

      

        <div class="d-flex justify-content-center mt-4 allSearchButtons">
            <div class="btn-group">


                <select class="selectpicker" id='slect-area' multiple data-live-search="true"
                    title="Search By Location">
                    {{#each areas}}
                    <option>{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="btn-group">
                <select class="selectpicker" id='slect-skill' multiple data-live-search="true" title="Search By Talent">
                    {{#each skills}}
                    <option>{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="btn-group">
                <select class="selectpicker" id='slect-genre' multiple data-live-search="true" title="Search By Genre">
                    {{#each genres}}
                    <option>{{name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>

    </nav>

    <div class="d-flex justify-content-center mt-4 allSearchButtons">
        <div class="row">
            <div class="col-xs-12 col-lg-3">

                <select class="selectpicker" multiple data-live-search="true" title="Search By Location">
                    {{#each areas}}
                    <option>{{name}}</option>
                    {{/each}}
                </select>

            </div>
            <div class="col-xs-12 col-lg-3">
                <select class="selectpicker" multiple data-live-search="true" title="Search By Talent">
                    {{#each talents}}
                    <option>{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col-xs-12 col-lg-3">
                <select class="selectpicker" multiple data-live-search="true" title="Search By Genre">
                    {{#each genres}}
                    <option>{{name}}</option>
                    {{/each}}
                </select>
            </div>
            <div class="col-xs-12 col-lg-3">

                <button type="button" id="userSearchSubmit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            {{#each users}}
            <div class="card" style="width: 18rem;">
                <img src="{{this.image}}" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.email}}</p>
                    <p class="card-text">
                        <ul>
                            {{#each this.talentList}}
                            <li>{{talent}}</li>
                            {{/each}}
                        </ul>

                    </p>
                    <a href="profile/{{this.id}}" class="btn btn-primary">View Profile</a>
                </div>
            </div>
            {{/each}}
        </div>


    </div>
</div>

    <!-- Modal -->
    <div class="modal fade" id="reg-modal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Modal Header</h4>
                </div>
                <div class="modal-body">
                    <p id='error-text'>Some text in the modal.</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>

        </div>
    </div>

